# BIZRA Sovereign LLM Environment Configuration
# Copy to .env and customize

# =============================================================================
# CONSTITUTIONAL THRESHOLDS
# =============================================================================
# These are enforced across all components. Changing them requires rebuilding.
IHSAN_THRESHOLD=0.95
SNR_THRESHOLD=0.85

# =============================================================================
# MODEL STORE
# =============================================================================
# Path to GGUF model storage
BIZRA_MODEL_STORE=~/.bizra/models

# Default model for inference
BIZRA_DEFAULT_MODEL=bizra-seed-1b

# =============================================================================
# NETWORK MODE
# =============================================================================
# Options: OFFLINE, LOCAL_ONLY, FEDERATED, HYBRID
BIZRA_NETWORK_MODE=HYBRID

# Federation discovery timeout (ms)
BIZRA_DISCOVERY_TIMEOUT_MS=5000

# Bootstrap nodes (comma-separated)
BIZRA_BOOTSTRAP_NODES=

# =============================================================================
# IPC CONFIGURATION (Iceoryx2)
# =============================================================================
# Shared memory segment name
BIZRA_IPC_SEGMENT=bizra_sovereign

# Maximum message size (bytes)
BIZRA_IPC_MAX_MESSAGE=1048576

# Buffer slots
BIZRA_IPC_BUFFER_SLOTS=64

# =============================================================================
# INFERENCE SANDBOX
# =============================================================================
# Enable sandbox isolation
BIZRA_SANDBOX=1

# Sandbox type: docker, wasm, process
BIZRA_SANDBOX_TYPE=process

# GPU layers (-1 = all on GPU, 0 = CPU only)
BIZRA_GPU_LAYERS=-1

# Context length
BIZRA_CONTEXT_LENGTH=4096

# =============================================================================
# FEDERATION POOL
# =============================================================================
# Minimum peers for pool inference
BIZRA_POOL_MIN_PEERS=1

# Consensus quorum (0.0 - 1.0)
BIZRA_POOL_QUORUM=0.67

# Request timeout (ms)
BIZRA_POOL_TIMEOUT_MS=60000

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR
BIZRA_LOG_LEVEL=INFO

# Log format: json, text
BIZRA_LOG_FORMAT=text

# =============================================================================
# SECURITY
# =============================================================================
# Ed25519 keypair path (for CapabilityCard signing)
BIZRA_KEYPAIR_PATH=~/.bizra/keypair.json

# Enable post-quantum signatures (Dilithium-5)
BIZRA_POST_QUANTUM=false

# =============================================================================
# PATHS
# =============================================================================
# Claude-flow memory directory
CLAUDE_FLOW_MEMORY_DIR=.claude-flow/memory

# Enable memory persistence
CLAUDE_FLOW_MEMORY_PERSIST=true
