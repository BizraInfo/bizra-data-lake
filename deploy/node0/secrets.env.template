# Federation bootstrap nodes
# FEDERATION_BOOTSTRAP_NODES=node1.bizra.io:8443,node2.bizra.io:8443

# ==============================================================================
# ENCRYPTION
# ==============================================================================

# Vault encryption key (for at-rest encryption)
# VAULT_KEY=CHANGE_ME_GENERATE_KEY

