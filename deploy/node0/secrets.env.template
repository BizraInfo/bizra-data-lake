# ==============================================================================
# API KEYS
# ==============================================================================

# BIZRA internal secret key (generate with: openssl rand -hex 32)
BIZRA_SECRET_KEY=CHANGE_ME_GENERATE_NEW_KEY

# Optional: External API keys (if using cloud services)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# ==============================================================================
# MONITORING
# ==============================================================================

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ==============================================================================
# FEDERATION (Future)
# ==============================================================================

# Node signing key (Ed25519, generate with: python -c "from core.pci.crypto import generate_keypair; print(generate_keypair()[0].hex())")
