# BIZRA-DATA-LAKE Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Google/Gemini API Key (for Layer 4 LLM Extraction)
GOOGLE_API_KEY=your_gemini_api_key_here
LANGEXTRACT_API_KEY=your_gemini_api_key_here

# XTR-WARP Configuration (ColBERTv2/PLAID + XTR)
INDEX_ROOT=C:/BIZRA-DATA-LAKE/03_INDEXED/warp_indexes
EXPERIMENT_ROOT=C:/BIZRA-DATA-LAKE/04_GOLD/warp_experiments
BEIR_COLLECTION_PATH=C:/BIZRA-DATA-LAKE/02_PROCESSED/beir
LOTTE_COLLECTION_PATH=C:/BIZRA-DATA-LAKE/02_PROCESSED/lotte

# WARP Runtime Settings
WARP_CHECKPOINT=answerdotai/answerai-colbert-small-v1
WARP_NBITS=2
WARP_NPROBE=16
WARP_T_PRIME=128
WARP_BOUND=128

# Hugging Face Access (for model downloads)
HF_TOKEN=your_huggingface_token_here

# LM Studio API Key (local inference)
LM_STUDIO_API_KEY=your_lm_studio_key_here
LM_API_TOKEN=your_lm_studio_key_here

# Desktop Bridge (required for bridge start/ping/status and AHK client)
BIZRA_BRIDGE_TOKEN=your_bridge_shared_token_here
# 32-byte signing key encoded as hex (64 hex chars)
BIZRA_RECEIPT_PRIVATE_KEY_HEX=your_64_hex_char_signing_key_here

# Spearpoint Configuration
SPEARPOINT_STATE_DIR=~/.bizra/spearpoint
SPEARPOINT_EVIDENCE_LEDGER=~/.bizra/spearpoint/evidence.jsonl
SPEARPOINT_HYPOTHESIS_MEMORY=~/.bizra/spearpoint/hypothesis_memory
SPEARPOINT_LOOP_INTERVAL=300
SPEARPOINT_MAX_ITERATIONS=10
SPEARPOINT_BUDGET_USD=10.0

# Docker Compose Infrastructure (required for `docker compose up`)
REDIS_PASSWORD=change_me_to_a_strong_password
GRAFANA_ADMIN_PASSWORD=change_me_to_a_strong_password
